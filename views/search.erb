<div>

  <h4>Select a column to search, enter a value and click <b>Submit</b>.</h4>

  <div class = "padding">
    <form  method = "post" action = "search_results">
      <select type = "text" name = "search[column]">
        <option value = "fname">First Name</option>
        <option value = "lname">Last Name</option>
        <option value = "addr">Street Address</option>
        <option value = "city">City</option>
        <option value = "state">State Abbreviation</option>
        <option value = "zip">Zip Code</option>
        <option value = "mobile">Mobile Phone</option>
        <option value = "home">Home Phone</option>
        <option value = "work">Work Phone</option>
      </select>
      <input type = "text" name = "search[value]" required>
      <input type = "submit">
    </form>
  </div>

  <hr>

  <!-- only populated if no search matches -->
  <div class="feedback">
    <p><i><%= feedback %></i></p>
  </div>

</div>